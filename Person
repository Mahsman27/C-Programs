using System;

namespace UdemyPractice
{
    public class Person
    {
        public string FirstName;
        public string MiddleName;
        public string LastName;
        public int Birthday;

        public void Introduce()
        {
            Console.WriteLine("My name is " + FirstName + " " + MiddleName + " " + LastName + " " + "and my birthday is " + Birthday);
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            var John = new Person();
            John.FirstName = "John";
            John.MiddleName = "Robert";
            John.LastName = "Smith";
            John.Birthday = 0621994;
            John.Introduce();
        }

    }
}
